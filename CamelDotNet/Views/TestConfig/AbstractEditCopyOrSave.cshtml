@model TestConfigEdit
<div style="clear: both">
    <div class="infoBlock" style="width: 22%">
        @Html.HiddenFor(model => model.Id)
        <div class="editor-label">
            @Html.LabelFor(model => model.ClientId)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.ClientId, new SelectList(Common.GetClientList(), "Id", "Name"), String.Empty)
            @Html.ValidationMessageFor(model => model.ClientId)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.ProductTypeId)
        </div>
        <div class="editor-field">
            @Html.FilterCombox(Html.DropDownListFor(model => model.ProductTypeId, new SelectList(Common.GetProductByIdList(Model.ProductTypeId), "Id", "FullName"), String.Empty, new { @class = "filter inputcombox-combox" }))
            @*@Html.DropDownListFor(model => model.ProductTypeId, new SelectList(Common.GetProductTypeList(), "Id", "FullName"), String.Empty)*@
            @Html.ValidationMessageFor(model => model.ProductTypeId)
        </div>
        @Html.HiddenFor(model => model.IsDeleted)
    </div>
</div>