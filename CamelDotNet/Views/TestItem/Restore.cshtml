@model TestItem

@{
    ViewBag.Title = "恢复";
}

<h2>@ViewBag.Name:@ViewBag.Title</h2>

<h3>您确定要恢复此条记录么?</h3>

@Html.Action("Abstract", (string)ViewBag.Controller, new { id = Model.Id })

<div>
    @using (Html.BeginForm("RestoreSave", (string)ViewBag.Controller))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("id", Model.Id)
        @Html.Hidden("returnUrl", @Url.Content((string)ViewBag.ReturnUrl))

        <input type="submit" value="确认恢复" />
    }
    <a href="@Url.Content((string)ViewBag.ReturnUrl)">取消</a>
</div>
