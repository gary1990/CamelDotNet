@model CamelDotNetRole

@{
    ViewBag.Title = "编辑";
}

<h2>@ViewBag.Name:@ViewBag.Title</h2>

@using (Html.BeginForm("EditSaveWithMultiselect", (string)ViewBag.Controller))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        @Html.Hidden("returnUrl", (string)ViewBag.ReturnUrl)
        @Html.EditorForModel("EditCamelDotNetRole")
        <div style="clear: both"></div>
        <p>
            <input type="submit" value="保存" />
        </p>
    </fieldset>
}

<div>
    <a href="@Url.Content((string)ViewBag.ReturnUrl)">取消</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/multiselect2side/jquery.multiselect2side.js")
    <script type="text/javascript">
        $().ready(function () {
            $(".multiselect2side").multiselect2side({ minSize: 12 });
        });
    </script>
}
@section Styles {
    @Styles.Render("~/Scripts/multiselect2side/jquery.multiselect2side.css")
}
